using System;

public class Program
{
	public static void Main()
	{
		Console.WriteLine("User Number: ");
		int rows = int.Parse(Console.ReadLine());
		for (int i = 1; i <= rows; i++)
		{
			for (int j = 1; j <= rows - i; j++)
			{
				Console.Write(" ");
		}

		for (int k = 1; k <= i; k++)
		{
			Console.Write(i + " ");
		}

		Console.WriteLine();
		}
	}
}
